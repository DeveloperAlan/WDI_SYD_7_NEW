<%= form_for @message do |f| %>

  <p>
    <%= f.label :to %><br>
    <%= f.text_field :to %>
  </p>

  <p>
    <%= f.label :from %><br>
    <%= f.text_field :from %>
  </p>

  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>